<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>Login</title>
    <link rel='stylesheet' href='/styles.css'>
</head>
<body>
    <div class='container'>
        <h2>Login</h2>
        <% if (messages.error) { %>
            <% messages.error.forEach(function(message) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% }) %>
        <% } %>
        <!-- The action is the endpoint the form data will be sent to, and the method is the HTTP method, which should be POST in this case -->
        <form id='login-form' action='/login' method='POST'>
            <!-- The name attribute is important for the server to be able to read the data -->
            <input type='text' name='email' placeholder='Email' required> <!-- Make sure the placeholder corresponds to the expected input -->
            <input type='password' name='password' placeholder='Password' required>
            <button type='submit'>Login</button>
        </form>
        
        <div class='footer'>
            <p>Don't have an account? <a href='/register'>Register</a></p>
        </div>
    </div>
</body>
</html>
